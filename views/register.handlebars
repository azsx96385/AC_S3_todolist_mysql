<div class="container mt-5">
    <div class="row ">
        <div class="card m-auto col-5">
            <p class="text-center font-weight-bold mt-3">註冊表單</p>
            <div class="card-body">
                <form action="/users/register" method="post">
                    <div class="form-group">
                        <label class="" for="name">姓名: </label>
                        <input type="text" id="name" name="name" class="form-control" value={{name}}>
                    </div>
                    <div class="form-group">
                        <label class="" for="email">信箱: </label>
                        <input type="email" id="email" name="email" class="form-control" value={{email}}>
                    </div>
                    <div class="form-group">
                        <label class="" for="password">密碼: </label>
                        <input type="password" id="password" name="password" class="form-control" value={{password}}>
                    </div>
                    <div class="form-group">
                        <label class="" for="password_confirm">密碼確認: </label>
                        <input type="password" id="password_confirm" name="password_confirm" class="form-control"
                            value={{password_confirm}}>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">註冊</button>
                    <div class="mt-3">
                        <p>已經有帳號了? <a href="/users/login">登入</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>