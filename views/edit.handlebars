<div class="container mt-5">
    <div class="row ">
        <div class="card m-auto col-5">
            <p class="text-center font-weight-bold mt-3">修改頁面</p>
            <div class="card-body">
                <p class="font-weight-bold font-capitalize">hello ! {{user.name}}</p>
                <form action="/todos/edit/{{todoId}}" method="post">

                    {{!-- task name --}}
                    <div class="form-group">
                        <label class="" for="name">任務名稱: </label>
                        <input type="text" class="form-control" name="name" value="{{todoName}}">
                    </div>
                    {{!-- done status --}}
                    <div class="form-group">
                        <label class="" for="done">完成狀態: </label>
                        <input type="checkbox" name="done" class="form-control" {{#if todoDone}}checked{{/if}}>
                    </div>


                    <button href="/todos/edit" class="btn  btn-success mr-3 ">修改</button>
                    <a href="/" class="btn    btn-primary  ">返回</a>


                </form>
            </div>
        </div>
    </div>
</div>